<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/txt_desk_name"
        android:gravity="center"
        android:textSize="@dimen/size20sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/txt_desk_name"
        android:id="@+id/img_desk"
        android:src="@drawable/banan"
        android:layout_width="120dp"
        android:layout_height="120dp">

    </ImageView>
    <ImageView
        android:layout_marginRight="@dimen/size15dp"
        android:layout_below="@+id/img_desk"
        android:id="@+id/img_order"
        android:src="@drawable/order"
        android:layout_width="35dp"
        android:layout_height="wrap_content">

    </ImageView>
    <ImageView
        android:layout_marginLeft="@dimen/size15dp"
        android:layout_toRightOf="@+id/img_order"
        android:layout_below="@+id/img_desk"
        android:id="@+id/img_pay"
        android:src="@drawable/pay"
        android:layout_width="35dp"
        android:layout_height="wrap_content">

    </ImageView>

</RelativeLayout>